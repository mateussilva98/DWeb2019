extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-blue-gray
                h2 Informação de Tipologia
            .w3-container
                button.w3-btn.w3-gray(onclick="history.back()")
                    i.fa.fa-reply
                p Voltar
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Sigla
                        th Designação
                        th Estado
                    tr
                        td= infoTipologia.sigla
                        td= infoTipologia.designacao
                        td= infoTipologia.estado

            if entidades.length > 0
                .w3-container
                    h3 Entidades pertencentes à tipologia
                    table.w3-table-all.w3-section
                        tr
                            th ID
                            th Sigla
                            th Designação
                            th Visualizar
                        each e in entidades
                            tr
                                td= e.id
                                td= e.sigla
                                td= e.designacao
                                td
                                    button.w3-btn.w3-gray(onclick="window.location.assign('/entidades/" + e.id + "')")
                                        i.fa.fa-info-circle
            if dono.length > 0
                .w3-container
                    h3 Processos de que a tipologia é dona
                    table.w3-table-all.w3-section
                        tr
                            th ID
                            th Código
                            th Título
                            th Visualizar
                        each d in dono
                            tr
                                td= d.id
                                td= d.codigo
                                td= d.titulo
                                td
                                    button.w3-btn.w3-gray(onclick="window.location.assign('/processo/c" + d.codigo + "')")
                                        i.fa.fa-info-circle
            if participante.length >0
                .w3-container
                    h3 Processos em que a tipologia participa
                    table.w3-table-all.w3-section
                        tr
                            th Tipo Participantes
                            th Código
                            th Título
                            th Visualizar
                        each p in participante
                            tr
                                td= p.tipoPar
                                td= p.codigo
                                td= p.titulo
                                td
                                    button.w3-btn.w3-gray(onclick="window.location.assign('/processo/c" + p.codigo + "')")
                                        i.fa.fa-info-circle

            .w3-container
                button.w3-btn.w3-gray(onclick="history.back()")
                    i.fa.fa-reply
                p Voltar
        footer.w3-container.w3-blue-gray
                adress Gerado por CLAV - 
                    a(href="/entidades") Voltar à página principal