extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-blue-gray
                h2 Informação de Legislação
            .w3-container
                button.w3-btn.w3-gray(onclick="history.back()")
                    i.fa.fa-reply
                p Voltar
            .w3-container
                table.w3-table-all.w3-section
                    if legislacao.tipo
                        tr
                            th Tipo
                            td= legislacao.tipo
                    if legislacao.numero
                        tr
                            th Número
                            td= legislacao.numero
                    if legislacao.sumario
                        tr
                            th Sumário
                            td= legislacao.sumario
                    if legislacao.link
                        tr
                            th Link
                            td= legislacao.link
                    if legislacao.estado
                        tr
                            th Estado
                            td= legislacao.estado
                    if legislacao.data
                        tr
                            th Data
                            td= legislacao.data
                    
            .w3-container
                button.w3-btn.w3-gray(onclick="history.back()")
                    i.fa.fa-reply
                p Voltar
        footer.w3-container.w3-blue-gray
                adress Gerado por CLAV - 
                    a(href="/entidades") Voltar à página principal