extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-blue-gray
                h3 Atualizar Filme
            .w3-container
                input.w3-input.w3-border.w3-section.w3-gray(id="title" type="text" name="title" value= filme.title)
                input.w3-input.w3-border.w3-section.w3-gray(id="year" type="text" name="year" value= filme.year)
                button.w3-btn.w3-margin-bottom.w3-right.w3-gray(onclick="atualizarFilme('" + filme._id + "')") Atualizar


        footer.w3-container.w3-blue-gray
                adress Gerado por Arquivo Filmes - 
                    a(href="/filmes") Voltar à página principal