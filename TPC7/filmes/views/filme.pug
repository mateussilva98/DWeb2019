extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-blue-gray
                h3 Informação de Filme
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Título
                        th Ano
                        th Elenco
                        th Géneros
                        th Operações
                    tr
                        td= filme.title
                        td= filme.year
                        td
                            ul
                                each c in filme.cast
                                    li= c
                        td
                            ul
                                each g in filme.genres
                                    li= g
                        td

                            button.w3-btn.w3-gray(onclick="eliminarItem('"+ filme._id +"')") Eliminar
                            button.w3-btn.w3-gray(onclick="window.location.assign('update/" + filme._id + "')") Atualizar

        footer.w3-container.w3-blue-gray
                adress Gerado por Arquivo Filmes - 
                    a(href="/filmes") Voltar à página principal