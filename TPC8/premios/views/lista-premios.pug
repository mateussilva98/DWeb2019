extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-blue-gray
                h3.w3-left Arquivo Premios
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Ano
                        th Categoria
                        th Informações
                    each p in premios
                        tr
                            td= p.year
                            td= p.category
                            td
                                button.w3-btn.w3-gray(onclick="window.location.assign('/premios/" + p._id + "')")
                                    i.fa.fa-info-circle