extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-blue-gray
                h3.w3-left Arquivo Premios
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Designação
                        th Estado
                        th Visualizar
                    each p in lista
                        tr
                            td= p.designacao
                            td= p.estado
                            td
                                button.w3-btn.w3-gray(onclick="window.location.assign('/entidades/" + p.id + "')")
                                    i.fa.fa-info-circle
