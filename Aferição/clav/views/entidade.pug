extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-blue-gray
                h3 Informação de Entidade
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Sigla
                        th Designação
                        th Estado
                        th SIOE
                        th Internacional
                    tr
                        td= entidade.sigla
                        td= entidade.designacao
                        td= entidade.estado
                        td= entidade.sioe
                        td= entidade.internacional

            .w3-container
                h5 Tipologias
                table.w3-table-all.w3-section
                    tr
                        th ID
                        th Sigla
                        th Designação
                    each t in tipologias
                        tr
                            td= t.id
                            td= t.sigla
                            td= t.designacao
            
            .w3-container
                h5 Intervenção - Donos
                table.w3-table-all.w3-section
                    tr
                        th Código
                        th Título
                    each d in dono
                        tr
                            td= d.codigo
                            td= d.titulo

            .w3-container
                h5 Intervenção - Participantes
                table.w3-table-all.w3-section
                    tr
                        th Tipo Participantes
                        th Código
                        th Título
                    each p in participante
                        tr
                            td= p.tipoPar
                            td= p.codigo
                            td= p.titulo

        footer.w3-container.w3-blue-gray
                adress Gerado por CLAV - 
                    a(href="/entidades") Voltar à página principal